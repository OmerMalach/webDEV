doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title StudyBudy: My Summaries
    link(rel='stylesheet' href='/CSS/app.css')
    link(rel='stylesheet' href='/CSS/searchResults.css')
    link(rel='icon' href='../static/photos/icon.png' type='image/x-icon')
    script(src='https://kit.fontawesome.com/7d07e6b941.js' crossorigin='anonymous')
  body
    nav
      include navBar
    main
      .container
        h1 Search Results
        .credit-counter-container
           i.fas.fa-coins
            span#credit-counter Your Credits:#{v1}
        .summary-board
          if summaries.length > 0
            each summary in summaries
              .summary-card
                h3= summary.Course_Name
                p= 'Course Number: ' + summary.Course_Number
                p= 'Teacher: ' + summary.teacher
                p= 'Year: ' + summary.Year
                p= 'Semester: ' + summary.Semester
                p= 'Number of Downloads: ' + summary.numDownloads
                p= 'Upload Date: ' + summary.uploadDate
                a.downBt(href=summary.summaryUrl download data-id=summary.Summary_ID)= 'Download'
          else
            p No summaries available.
    footer
      include footer
script(src='/JS/menu.js')
script(src='/JS/downloadLogger.js')
